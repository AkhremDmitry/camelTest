<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://dozer.sourceforge.net
          http://dozer.sourceforge.net/schema/beanmapping.xsd">

    <configuration>
        <stop-on-errors>true</stop-on-errors>
        <date-format>yyyy-MM-dd</date-format>
        <wildcard>true</wildcard>
    </configuration>

    <mapping>
        <class-a>com.epam.brest.course.dao.Crew</class-a>
        <class-b>com.epam.brest.course.dozerDto.CrewDozerDto</class-b>
        <field>
            <a>crewId</a>
            <b>crewIdDto</b>
        </field>
        <field>
            <a>crewName</a>
            <b>crewNameDto</b>
        </field>
        <field>
            <a>description</a>
            <b>descriptionDto</b>
        </field>
        <field>
            <a>carId</a>
            <b>carIdDto</b>
        </field>
    </mapping>
    <mapping>
        <class-a>com.epam.brest.course.dto.CrewDto</class-a>
        <class-b>com.epam.brest.course.dozerDto.CrewDozerSimpleDto</class-b>
        <field>
            <a>crewId</a>
            <b>crewIdDto</b>
        </field>
        <field>
            <a>crewName</a>
            <b>crewNameDto</b>
        </field>
    </mapping>
    <mapping>
        <class-a>com.epam.brest.course.dto.CrewDtoWithCall</class-a>
        <class-b>com.epam.brest.course.dozerDto.CrewDozerDtoWithCall</class-b>
        <field>
            <a>crewId</a>
            <b>crewIdDto</b>
        </field>
        <field>
            <a>crewName</a>
            <b>crewNameDto</b>
        </field>
        <field>
            <a>description</a>
            <b>descriptionDto</b>
        </field>
        <field>
            <a>numberOfCalls</a>
            <b>numberOfCallsDto</b>
        </field>
    </mapping>

    <mapping>
        <class-a>com.epam.brest.course.dao.Car</class-a>
        <class-b>com.epam.brest.course.dozerDto.CarDozerDto</class-b>
        <field>
            <a>carId</a>
            <b>carIdDto</b>
        </field>
        <field>
            <a>registrationPlate</a>
            <b>registrationPlateDto</b>
        </field>
        <field>
            <a>description</a>
            <b>descriptionDto</b>
        </field>
    </mapping>
    <mapping>
        <class-a>com.epam.brest.course.dto.CarDtoWithCrew</class-a>
        <class-b>com.epam.brest.course.dozerDto.CarDozerDtoWithCrew</class-b>
        <field>
            <a>carId</a>
            <b>carIdDto</b>
        </field>
        <field>
            <a>registrationPlate</a>
            <b>registrationPlateDto</b>
        </field>
        <field>
            <a>description</a>
            <b>descriptionDto</b>
        </field>
        <field>
            <a>numberOfCrew</a>
            <b>numberOfCrewDto</b>
        </field>
    </mapping>
    <mapping>
        <class-a>com.epam.brest.course.dto.CarDto</class-a>
        <class-b>com.epam.brest.course.dozerDto.CarDozerSimpleDto</class-b>
        <field>
            <a>carId</a>
            <b>carIdDto</b>
        </field>
        <field>
            <a>registrationPlate</a>
            <b>registrationPlateDto</b>
        </field>
    </mapping>

    <mapping>
        <class-a>com.epam.brest.course.dao.Call</class-a>
        <class-b>com.epam.brest.course.dozerDto.CallDozerDto</class-b>
        <field>
            <a>callId</a>
            <b>callIdDto</b>
        </field>
        <field>
            <a>dateCall</a>
            <b>dateCallDto</b>
        </field>
        <field>
            <a>description</a>
            <b>descriptionDto</b>
        </field>
        <field>
            <a>address</a>
            <b>addressDto</b>
        </field>
        <field>
            <a>crewId</a>
            <b>crewIdDto</b>
        </field>
    </mapping>
</mappings>